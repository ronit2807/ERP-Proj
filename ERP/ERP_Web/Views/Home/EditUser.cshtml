@model ERP.Models.DataTemplates.MasterVM.UserVM

@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Edit User</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
      
    
    <div class="form-group">
        <div class="row">
            <div class="col-md-1">
                @Html.LabelFor(model => model.userName)

            </div>

            <div class="col-md-3">

                @*@Html.EditorFor(model => model.userName,new { @readonly=true })*@
                @Html.TextBoxFor(model => model.userName, new { @readonly = true }) 
                @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
            </div>



            <div class="col-md-1">
                @Html.LabelFor(model => model.loginId)

            </div>

            <div class="col-md-3">

                @Html.TextBoxFor(model => model.loginId, new { @readonly=true})
                @Html.ValidationMessageFor(model => model.loginId, "", new { @class="text-danger"})
            </div>

            <div class="col-md-1">
                @Html.LabelFor(model => model.isActive)

            </div>

            <div class="col-md-3">

                @Html.EditorFor(model => model.isActive)
                @Html.ValidationMessageFor(model => model.isActive, "", new { @class="text-danger"})
            </div>
        </div>
        &nbsp;
        <div class="row">
            
            <div class="col-md-1">

                <label>Profile: </label>

            </div>
            <div class="col-md-3">

                @Html.DropDownListFor(m=>m.groupId,Model.Groups)
            </div>
        </div>
        &nbsp;
        <div class="col-md-6">
            <div>
                <input class="btn btn-sm btn-primary" type="submit" value="Save" />
                <div class="btn btn-sm btn-danger">
                    @Html.ActionLink("Back to List", "UsersList")
                </div>
            </div>

        </div>
    </div>
}



